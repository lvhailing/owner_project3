<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TitleBar -->
    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height_new</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/bg_title</item>
    </style>

    <style name="TitleBar_Menu_New">
        <item name="android:windowEnterAnimation">@anim/anim_titlemenu_in_new</item>
        <item name="android:windowExitAnimation">@anim/anim_titlemenu_out_new</item>
    </style>

    <style name="TitleBar_LeftButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/title_bar_height_new</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleBar_RightFrame">
        <item name="android:layout_width">@dimen/title_button_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TitleBar_RightButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TitleBar_RedPoint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="TitleBar_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <!-- <item name="android:textSize">23sp</item> -->
        <item name="android:textSize">20sp</item>
    </style>

</resources>
