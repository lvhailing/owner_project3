<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
    </style>

    <!-- TitleBar -->
    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height_new</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/bg_top</item>
    </style>

    <style name="TitleBar_Menu_New">
        <item name="android:windowEnterAnimation">@anim/anim_titlemenu_in_new</item>
        <item name="android:windowExitAnimation">@anim/anim_titlemenu_out_new</item>
    </style>

    <style name="TitleBar_LeftButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/title_bar_height_new</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleBar_RightFrame">
        <item name="android:layout_width">@dimen/title_button_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TitleBar_RightButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TitleBar_RedPoint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="TitleBar_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <!-- <item name="android:textSize">23sp</item> -->
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btn_house_detail_stytle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/shape_center_gray_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--房源页价钱样式-->
    <style name="house_resource_price_stytle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
