<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl_messgae_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_messgae_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_message_info"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dip"
            android:layout_marginBottom="10dip"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_info"
            android:layout_toRightOf="@id/iv_messgae_info"
            android:layout_marginLeft="15dip"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_gray"
            android:textSize="16sp"
            />
        <ImageView
            android:id="@+id/iv_messgae_info_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            />
        <TextView
            android:id="@+id/tv_message_info_num"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:text="0"
            android:background="@drawable/shape_circle_orange_red"
            android:layout_toLeftOf="@id/iv_messgae_info_arrow"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_white"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="16dip"
            android:visibility="gone"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_messgae_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:layout_marginTop="1dip"
        >
        <ImageView
            android:id="@+id/iv_messgae_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_message_notice"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dip"
            android:layout_marginBottom="10dip"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_notice"
            android:layout_toRightOf="@id/iv_messgae_notice"
            android:layout_marginLeft="15dip"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_gray"
            android:textSize="16sp"
            />
        <ImageView
            android:id="@+id/iv_messgae_notice_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            />
        <TextView
            android:id="@+id/tv_message_notice_num"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:text="0"
            android:background="@drawable/shape_circle_orange_red"
            android:layout_toLeftOf="@id/iv_messgae_notice_arrow"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_white"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="16dip"
            android:visibility="gone"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_messgae_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:layout_marginTop="1dip"
        >
        <ImageView
            android:id="@+id/iv_messgae_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_message_other"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dip"
            android:layout_marginBottom="10dip"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_other"
            android:layout_toRightOf="@id/iv_messgae_other"
            android:layout_marginLeft="15dip"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_gray"
            android:textSize="16sp"
            />
        <ImageView
            android:id="@+id/iv_messgae_other_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            />
        <TextView
            android:id="@+id/tv_message_other_num"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:text="0"
            android:background="@drawable/shape_circle_orange_red"
            android:layout_toLeftOf="@id/iv_messgae_other_arrow"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_white"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="16dip"
            android:visibility="gone"
            />

    </RelativeLayout>


</LinearLayout>
