<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    android:paddingBottom="20dip"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/img_password_old"
                android:background="@color/bg_white"
                android:padding="8dip"
                />
            <EditText
                android:id="@+id/et_change_password_old"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/bg_white"
                android:layout_marginLeft="1dip"
                android:hint="@string/setting_change_password_old"
                android:paddingLeft="8dip"
                android:textColorHint="@color/bg_gray_gray"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textSize="15sp"
                android:textColor="@color/txt_gray_d"
                android:textCursorDrawable="@drawable/color_cursor"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dip"
            >
            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/img_login_password"
                android:background="@color/bg_white"
                android:padding="8dip"
                />
            <EditText
                android:id="@+id/et_change_password_new"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/bg_white"
                android:layout_marginLeft="1dip"
                android:hint="@string/setting_change_password_new"
                android:paddingLeft="8dip"
                android:textColorHint="@color/bg_gray_gray"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textSize="15sp"
                android:textColor="@color/txt_gray_d"
                android:textCursorDrawable="@drawable/color_cursor"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dip"
            >
            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/img_verify_password"
                android:background="@color/bg_white"
                android:padding="8dip"
                />
            <EditText
                android:id="@+id/et_change_password_new_again"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/bg_white"
                android:layout_marginLeft="1dip"
                android:hint="@string/setting_change_password_new_again"
                android:paddingLeft="8dip"
                android:textColorHint="@color/bg_gray_gray"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textSize="15sp"
                android:textColor="@color/txt_gray_d"
                android:textCursorDrawable="@drawable/color_cursor"
                />

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_center_gray"
        android:text="@string/setting_change_password_sure"
        android:textColor="@color/txt_white"
        android:textSize="15sp"
        />

</RelativeLayout>
