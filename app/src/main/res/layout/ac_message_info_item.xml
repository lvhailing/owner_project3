<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/iv_message_info_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        />
    <TextView
        android:id="@+id/tv_message_info_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+500.00"
        android:layout_toLeftOf="@id/iv_message_info_item_arrow"
        android:layout_centerVertical="true"
        android:textColor="@color/txt_grad"
        android:textSize="14sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        >
        <TextView
            android:id="@+id/tv_message_info_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="佣金收益"
            android:layout_marginBottom="2dip"
            android:textColor="@color/txt_grad_d"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_message_info_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4-12 5:00"
            android:layout_marginTop="2dip"
            android:textColor="@color/txt_grad"
            android:textSize="14sp"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:src="@color/bg_gray"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        />

</RelativeLayout>
