<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/img_login_phone_number"
            android:background="@color/bg_white"
            android:padding="8dip"
            />
        <EditText
            android:id="@+id/et_findpassword_phone"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/bg_white"
            android:layout_marginLeft="1dip"
            android:hint="@string/findpassword_phone"
            android:paddingLeft="8dip"
            android:textColorHint="@color/bg_gray_gray"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/txt_gray_d"
            android:textCursorDrawable="@drawable/color_cursor"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dip"
        >
        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/img_sign_verify_code"
            android:background="@color/bg_white"
            android:padding="8dip"
            />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/bg_white"
            android:layout_marginLeft="1dip"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_findpassword_get_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_center_orange"
                android:layout_alignParentRight="true"
                android:text="@string/sign_get_verify"
                android:textColor="@color/txt_white"
                android:layout_marginRight="10dip"
                android:padding="5dip"
                android:layout_marginLeft="5dip"
                />
            <EditText
                android:id="@+id/et_findpassword_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:layout_marginLeft="1dip"
                android:hint="@string/sign_verify"
                android:paddingLeft="8dip"
                android:textColorHint="@color/bg_gray_gray"
                android:layout_toLeftOf="@id/tv_findpassword_get_verify_code"
                android:padding="5dip"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/txt_gray_d"
                android:textCursorDrawable="@drawable/color_cursor"
                />
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/findpassword_verify_code_mess"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="10dip"
        android:textColor="@color/txt_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dip"

        >
        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/img_sign_password"
            android:background="@color/bg_white"
            android:padding="8dip"
            />
        <EditText
            android:id="@+id/et_findpassword_password"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/bg_white"
            android:layout_marginLeft="1dip"
            android:hint="@string/findpassword_password"
            android:paddingLeft="8dip"
            android:textColorHint="@color/bg_gray_gray"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/txt_gray_d"
            android:textCursorDrawable="@drawable/color_cursor"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dip"
        >
        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/img_verify_password"
            android:background="@color/bg_white"
            android:padding="8dip"
            />
        <EditText
            android:id="@+id/et_findpassword_password_again"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/bg_white"
            android:layout_marginLeft="1dip"
            android:hint="@string/findpassword_password_new"
            android:paddingLeft="8dip"
            android:textColorHint="@color/bg_gray_gray"
            android:maxLength="20"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textColor="@color/txt_gray_d"
            android:textCursorDrawable="@drawable/color_cursor"
            />


    </LinearLayout>


    <Button
        android:id="@+id/btn_findpassword"
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:layout_marginTop="30dip"
        android:text="@string/findpassword_btn"
        android:background="@drawable/shape_center_gray"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:textColor="@color/txt_white"
        android:textSize="15sp"
        />

</LinearLayout>
