<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/iv_message_notice_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:layout_toLeftOf="@id/iv_message_notice_item_arrow"
        android:layout_marginRight="5dip"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_message_notice_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-12-12 04:15"
                android:layout_marginLeft="0dip"
                android:layout_marginBottom="2dip"
                android:textColor="@color/txt_gray"
                android:textSize="15sp"
                android:layout_alignParentRight="true"

                />
            <RelativeLayout
                android:id="@+id/ll_messgae_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toLeftOf="@id/tv_message_notice_item_time"
                android:layout_alignParentLeft="true"
                >
                <TextView
                    android:id="@+id/tv_message_notice_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公告通通知标公告通通知标公告通通知标公告通通知标题"
                    android:layout_centerVertical="true"
                    android:textColor="@color/txt_gray_d"
                    android:textSize="15sp"
                    android:maxWidth="165dip"
                    />
                <ImageView
                    android:id="@+id/iv_message_notice_isread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shape_circle_orange_red"
                    android:layout_toRightOf="@id/tv_message_notice_item_name"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="2dip"
                    android:visibility="visible"

                    />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_message_notice_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="皮皮虾，我们走，皮皮虾，我们走皮皮虾，我们走，皮皮虾，我们走皮皮虾，我们走，皮皮虾，我们走，皮皮虾，我们走，皮皮虾，我们走"
            android:layout_marginTop="10dip"
            android:textColor="@color/txt_gray"
            android:textSize="15sp"
            android:maxLines="15"

            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:src="@color/bg_gray"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        />

</RelativeLayout>
