    <RelativeLayout
        android:id="@+id/rl_message_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/iv_message_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/img_message_notice"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@id/iv_message_notice"
            android:text="@string/message_notice"
            android:textColor="@color/txt_gray"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_message_notice_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@mipmap/img_arrow_right"/>

        <TextView
            android:id="@+id/tv_message_notice_num"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_message_notice_arrow"
            android:background="@drawable/shape_circle_orange_red"
            android:gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/txt_white"
            android:textSize="14dip"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_message_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/iv_message_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/img_message_other"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@id/iv_message_other"
            android:text="@string/message_other"
            android:textColor="@color/txt_gray"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_message_other_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@mipmap/img_arrow_right"/>

        <TextView
            android:id="@+id/tv_message_other_num"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_message_other_arrow"
            android:background="@drawable/shape_circle_orange_red"
            android:gravity="center"
            android:maxLines="1"
            android:text="0"
            android:textColor="@color/txt_white"
            android:textSize="14dip"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
