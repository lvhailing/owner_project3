<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:minHeight="180dp">

            <ImageView
                android:id="@+id/iv_liner_item"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@mipmap/bg_oversea_project_normal"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_black_trans"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/tv_house_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="帕诺拉普吉岛海景公寓 (PANORA)"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_house_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_house_name"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="9dp"
                    android:text="80万元起面积"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_travel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_house_name"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:layout_toRightOf="@id/tv_house_area"
                    android:text="80至230㎡"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="23dp"
            android:text="项目简介"
            android:textColor="@color/txt_black"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目位置："
                android:textColor="@color/txt_light_gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_decoration_standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:maxLines="1"
                android:maxLength="20"
                android:ellipsize="end"
                android:text="滩附近"
                android:textColor="@color/gray_dark"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目类型："
                android:textColor="@color/txt_light_gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_house_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:maxLines="1"
                android:maxLength="20"
                android:ellipsize="end"
                android:text="独栋别墅"
                android:textColor="@color/gray_dark"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目体量："
                android:textColor="@color/txt_light_gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_house_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:maxLines="1"
                android:maxLength="20"
                android:ellipsize="end"
                android:text="83套"
                android:textColor="@color/gray_dark"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="装修标准："
                android:textColor="@color/txt_light_gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_property_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:maxLines="1"
                android:maxLength="20"
                android:ellipsize="end"
                android:text="滩附近"
                android:textColor="@color/gray_dark"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目描述："
                android:textColor="@color/txt_light_gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_house_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:maxLines="3"
                android:maxLength="80"
                android:ellipsize="end"
                android:text="滩附近"
                android:textColor="@color/gray_dark"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
